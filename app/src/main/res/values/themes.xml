<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.YandexTodo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.YandexTodo" parent="Base.Theme.YandexTodo">

        <item name="android:itemBackground">@color/back_elevated</item>
        <item name="android:contextPopupMenuStyle">@color/back_elevated</item>
    </style>


    <style name="DatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/color_blue</item>
        <item name="colorSecondary">@color/color_blue</item>
        <item name="colorControlActivated">@color/color_blue</item>
        <item name="colorControlHighlight">@color/color_blue</item>
        <item name="android:windowBackground">@color/back_secondary</item> <item name="android:textColor">@color/white</item>
        <item name="android:colorPrimary">@color/color_blue</item>
        <item name="android:textColorSecondary">@color/label_tertiary</item> <item name="android:textColorPrimary">@color/label_primary</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarButton </item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonBarButton </item>
    </style>

    <style name="DatePickerTheme.ButtonBarButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/color_blue</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/color_blue</item>
        <item name="colorSwitchThumbNormal">@color/back_elevated</item>
        <item name="android:colorForeground">@color/support_overlay</item>
    </style>

</resources>